<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fredrik Thomasson</title>
    
	<link rel="stylesheet" href="https://kit.fontawesome.com/41c8b474e2.css" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/site.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</head>
<body>

    <header>
        <div class="mynavbar">

            <div class="navbar-floatings">

                <div class="navbar-icons"><a href="#aboutme">About</a></div>
                <div class="navbar-icons"><a href="#experience">Experience</a></div>
                <div class="navbar-icons"><a href="#portfolio">Portfolio</a></div>
                <div class="navbar-icons"><a href="#testimonials">Testimonials</a></div>
                <div class="navbar-icons"><a href="#contact">Contact</a></div>


            </div>
            <div class="navbar-floatings2">
                <div id="mySidenav" class="sidenav">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                    <a href="#aboutme">About</a>
                    <a href="#experience">Experience</a>
                    <a href="#portfolio">Portfolio</a>
                    <a href="#testimonials">Testimonials</a>
                    <a href="#contact">Contact</a>
                </div>

                <!-- Use any element to open the sidenav -->
                <span class="navbar-icons" onclick="openNav()"><i class="fa-solid fa-square-caret-up"></i></span>

            </div>


        </div>

    </header>
    
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

	<!-- footer Block -->
    <footer class="footer-background">
        <section id="footer" class="py-5">
            <div class="container">
                <div class="footer-icons">
                    <a href="#" class="footer-icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="footer-icon"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#" class="footer-icon"><i class="fa-brands fa-linkedin"></i></a>
                </div>
            </div>
            <div class="copyright">
                <h6>© 2023 Fredrik Thomasson</h6>
                <i class="fa-solid fa-phone"></i><span> 073-033 08 55</span> | <i class="fa-solid fa-envelope"></i><span> <a class="footer-icon" style="text-decoration: none;" href="mailto:fredde.thomasson@gmail.com">fredde.thomasson@gmail.com</a></span>
            </div>
        </section>
    </footer>


    <button class="totop-arrow hidden"><i class="fa-solid fa-arrow-up"></i></button>

    <script src="js/script.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>